<%- include('partials/header'); -%>

<form>
    <h2 style="font-size:x-large;">Forgot Password</h2>
    <label for="email">Email</label>
    <input type="text" name="email" required />
    <div class="email message"></div>
    <button>Reset Password</button>
    <div id="emailReset"></div>
</form>
<%- include('partials/footer'); -%>
<script>
    const form = document.querySelector('form');
    const emailMessage = document.querySelector('.email.message');
    const ResetPassword = document.querySelector('#emailReset');
    
    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        // reset errors
        emailMessage.textContent = '';
      

        // get values
        const email = form.email.value;
        try {
            const res = await fetch('/forgot-password', {
                method: 'PUT',
                body: JSON.stringify({ email}),
                headers: { 'Content-Type': 'application/json' }
            });
            const data = await res.json();
            console.log('here is the data that i am printing on the client side ',data.message);
           
            if (data.message) {
                emailMessage.textContent = data.message;
                
            }
            if (data.error) {
                emailMessage.innerHTML = '<p style="color:#ff0099;" >'+data.error+'</p>';
              
            }
           

        }
        catch (err) {
            console.log(err);
        }
    });
</script>

